<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nome_item"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_subtotal_item" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:id="@+id/view_divider_bottom"
        android:layout_marginTop="3dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/tv_categoria_produto"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:id="@+id/tv_subtotal_item"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_categoria_produto"
        android:layout_below="@+id/tv_nome_item"
        android:layout_alignParentStart="true" />

</RelativeLayout>